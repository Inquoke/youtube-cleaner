{
  "manifest_version": 3,
  "name": "Hide YouTube Comments",
  "version": "1.0",
  "description": "Hides comments on all YouTube pages.",
  "icons": {
    "128": "icon.png"
  },
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}